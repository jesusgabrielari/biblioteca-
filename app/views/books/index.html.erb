<p id="notice"><%= notice %></p>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Autor</th>
        <th>Estado</th>
        <th>Fecha de préstamo</th>
        <th>Fecha de devolución</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr> 
            <td><%= book.id %></td>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.status %></td>
          <td><%= book.lend_date %></td>
          <td><%= book.return_date %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', book_edit_path(book.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Crear nuevo Libro', books_new_path, class: 'btn btn-success' %>
</div>